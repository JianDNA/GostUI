{
  "name": "gost-management-backend",
  "version": "1.0.0",
  "description": "GOST Management System Backend",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "dev:smart": "node scripts/start-dev.js",
    "init-db": "node scripts/init-db.js",
    "check-db": "node scripts/check-db.js",
    "migrate": "sequelize-cli db:migrate",
    "migrate:undo": "sequelize-cli db:migrate:undo",
    "migrate:undo:all": "sequelize-cli db:migrate:undo:all",
    "update": "npm install && sequelize-cli db:migrate",
    "install-gost": "node scripts/install-gost.js",
    "test-gost": "node scripts/test-gost.js",
    "forward": "node scripts/port-forward-test.js",
    "debug-forward": "node scripts/debug-port-forward.js",
    "reset-port": "node scripts/reset-port.js",
    "check-env": "node scripts/check-environment.js",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:migrate:undo": "npx sequelize-cli db:migrate:undo",
