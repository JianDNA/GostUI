    "fix-startup": "node scripts/fix-startup-issues.js"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "@influxdata/influxdb-client": "^1.33.2",
    "node-cron": "^3.0.3",
    "dotenv": "^16.3.1"
